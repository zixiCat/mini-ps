.zx-search {
  position: fixed;
  z-index: 1;
  width: 100%;
  top: 0;
}
.zx-body {
  position: relative;
  top: 100rpx;
  right: 0;
  bottom: 0;
  left: 0;
}
.zx-body .zx-category {
    position: -webkit-sticky;
    position: sticky;
    top: 100rpx;
    width: 25%;
    height: 900rpx;
    overflow: scroll;
    overflow: scroll;
}
.zx-body .zx-category .zx-active {
      border-left: 10rpx solid #F37B1D;
}
.zx-body .zx-item {
    width: 75%;
    height: 100%;
}
.zx-body .zx-item .zx-filter {
      position: fixed;
      width: 75%;
      z-index: 1;
}
.zx-body .zx-item .zx-shops {
      position: relative;
      top: 66rpx;
}
.zx-body .zx-item .zx-shops image {
        height: 120rpx;
}
.zx-body .zx-item .zx-shops .zx-detail {
