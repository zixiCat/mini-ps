.zx-info {
  position: absolute;
  margin: auto;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}
.zx-info .zx-dialog {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: absolute;
    margin: auto;
    width: 600rpx;
    height: 900rpx;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    border-radius: 15rpx;
    background: #FFFFFF;
}
.zx-info .zx-dialog .zx-content {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
